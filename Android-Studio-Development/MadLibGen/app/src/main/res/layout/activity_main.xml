<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#236FB9">

    <TextView
        android:id="@+id/titleLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello MadLib"
        android:textSize="30dp"
        android:fontFamily="serif-monospace"
        android:textColor="#E4F2FF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/madlib1BTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:text="Madlib1"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:backgroundTint="#0F0F11"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/madlib2BTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Madlib2"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:backgroundTint="#0F0F11"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/madlib3BTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Madlib3"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:backgroundTint="#0F0F11"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/randomBTN"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Random"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:backgroundTint="#0F0F11"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="232dp" />
    </LinearLayout>


    <!--Separation of main menu buttons
        Below begins the madlib3 content/button
    -->


    <LinearLayout
        android:id="@+id/inputEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <EditText
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Person"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Food Item"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Number"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Hobby"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Activity"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Action"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Business"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/input8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Adjective"
            android:paddingBottom="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enterBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:text="Enter"
                android:textSize="20dp" />

            <Button
                android:id="@+id/backBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Back"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputEdit"
        tools:visibility="gone">

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Magic MagLib"
            android:textSize="17dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>